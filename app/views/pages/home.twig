
{% extends "layout.twig" %}

{% block content %}

	<h1>Mes articles</h1>

	{% if (session.permission <= 2) and (session.permission > 0) %}

		<form method="post" action="{{path_for('add')}}">
			<input type="text" placeholder="title" name="title">
			<textarea name="text"></textarea>
			{% for categories in categoriesAll %} 				
  			<input type="checkbox" name="{{categories.id}}" value="categories"> 
				{{ categories.name }} 
			{% endfor %}
			<input type="submit" name="add article">
		</form>
	{% endif %}

	<h1>Articles</h1>

	{% for article in articles %}

	<h3>titre: {{article.title}}</h3>
	<p>	date: {{article.date|date()}}<p>
	<p>auteur(s):{{article.author}}</p>
	<p>categorie(s):
		
		{% for categorie in article.categories %} 
			{{ categorie }} 
		{% endfor %}
	</p>

			{% if session.permission == 1 %}

				<p><a href="{{path_for('edit', {'id':article.id})}}">Edit</a></p>
			{% endif %}
		{% endfor %}
	{% endblock %}
