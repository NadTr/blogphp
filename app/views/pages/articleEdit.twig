{% extends "layoutAdmin.twig" %}

{% block content %}

<p>Edit article</p>

<form method="post" action="{{path_for('update', {'id':id})}}">
	<div class="form-group">
			<label for="formGroupExampleInput">title</label>
			<input type="text" class="form-control" id="formGroupExampleInput" name="title" value="{{title}}">
	</div>
	<div class="form-group">
			<label for="formGroupExampleInput2">Text</label>
			<textarea name="text" class="form-control">{{text}}</textarea>
			<input type="text" name="date" value="{{date}}">
	</div>
	<input type="hidden" name="_METHOD" value="put"/>
	<input type="submit" name="add article">
</form>

{% endblock %}
