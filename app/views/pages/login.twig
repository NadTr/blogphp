{% extends "layout.twig" %}


{% block content %}
 <h1 class="text-center mt-4">Login on our blog</h1>
<form action="/submit/register" method="post">
  <div class="form-group">
    <label for="psd">Pseudo</label>
    <input type="text" class="form-control" id="psd" name="pseudo" placeholder="Enter pseudo" required>
  </div>
  <div class="form-group">
    <label for="passw">Password (8 characters minimum):</label>
    <input type="password" class="form-control" id="passw" name="password" placeholder="Enter password" minlength="8" required>
  </div>
  <button class="btn btn-primary btn-sm ml-auto" type="submit" name="button">Submit</button>
</form>




{% endblock %}
